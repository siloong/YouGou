/* pages/cart/index.wxss */
page {
  padding-bottom: 90rpx;
}
/* 收货地址的样式 */
.revice_address_row {
  padding: 20rpx;
}

.user_info_row {
  display: flex;
  font-size: 28rpx;
  line-height: 60rpx;
}

.user_info_row .user_info {
  flex: 5;
}
.user_info_row .user_phone {
  flex: 3;
  text-align: right;
}




/* 购物车的样式 */
.cart_title {
  padding: 20rpx;
  border-top: solid 1rpx currentColor;
  border-bottom: solid 1rpx currentColor;
  font-size: 36rpx;
  color: var(--themeColor);
}
.cart_main .cart_item {
  display: flex;
  padding: 20rpx;
  border-bottom: solid 1rpx #ccc;
}
.cart_item .cart_chk_wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_item .cart_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_img_wrap image {
  width: 80%;
}

.cart_item .cart_info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  font-size: 28rpx;
  color: #666;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.cart_info_wrap .goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
.goods_price_wrap .cart_num_tool {
  display: flex;
}
.cart_num_tool .num_edit {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 48rpx;
  height: 48rpx;
  border: solid 1rpx #666;
}
.cart_num_tool .num_edit:active {
  transform: scale(.96);
}
.cart_num_tool .goods_num {
  width: 60rpx;
  text-align: center;
  /* padding: 0 14rpx; */
}

.goods_price_wrap .goods_price {
  font-size: 34rpx;
  color: var(--themeColor);
}


/* 底部工具栏的样式 */
.footer_tool {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  width: 100%;
  border-top: solid 1px #ccc;
  background-color: #fff;
}
.footer_tool .all_chk_wrap {
  flex: 2;
  line-height: 90rpx;
  padding-left: 14rpx;
}

.footer_tool .total_price_wrap {
  flex: 5;
  text-align: right;
  padding-right: 14rpx;
}

.total_price .total_price_text {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--themeColor);
}

.footer_tool .order_pay_wrap {
  flex: 3;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  background-color: var(--themeColor);
}
