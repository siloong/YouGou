/* pages/goods_list/index.wxss */

.goods_item {
  display: flex;
  border-bottom: solid 1px #ccc;
  padding: 10rpx 0;
}
/* .goods_item:nth-child(n+2) {
} */
.goods_img_wrap {
  flex: 2;
}
.goods_img_wrap image {
  width: 70%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_info_wrap .goods_name {
  display: -webkit-box;
  font-size: 24rpx;
  color: #333;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_info_wrap .goods_price {
  color: var(--themeColor);
}