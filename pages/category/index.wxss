/* pages/category/index.wxss */
.category_container {
  display: flex;
  height: calc(100vh - 90rpx);
}

.left_menu {
  flex: 2;
  height: 100%;
  /* border-right: solid 1px #ccc; */
  box-shadow: 0 0 8px 1px rgba(0, 0, 0, 0.3);
}
.left_menu view {
  color: #333;
}
.left_menu .active {
  color: var(--themeColor);
  border-left:solid 2rpx currentColor;
  background-color: #ccc;
}
.left_menu view {
  padding: 10rpx;
  text-align: center;
}


.right_menu {
  flex: 5;
  height: 100%;
}
.goods_group .goods_title {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.goods_group .goods_title::before,
.goods_group .goods_title::after {
  content: "/";
  color: #ccc;
  padding: 0 10rpx;
}
.goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
  align-items: baseline;
  padding-bottom: 80rpx;
} 

.goods_group .goods_list navigator {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: calc(100% / 3);
  height: auto;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #333;
}
.goods_group .goods_list navigator > image {
  width: 50%;
}
