/* pages/search/index.wxss */

.search_wrap {
  width: 90vw;
  margin: 0 auto;
  margin-top: 32rpx;
  border: solid 1px #eee;
  border-radius: 32rpx;
  overflow: hidden;
}

.search_wrap .search_row {
  display: flex;
  width: 100%;
  height: 90rpx;
}
.search_row input {
  flex: 5;
  height: 100%;
  padding-left: 32rpx;
  font-size: 28rpx;
  /* background-color: yellow; */
}
.search_row button {
  flex: 1;
  height: 100%;
  font-weight: 100;
  background-color: #fff;
}



.search_content {
  /* padding: 20rpx; */
  line-height: 62rpx;
  max-height: 86vh;
  overflow: scroll;
}
.search_content .result_item:first-child {
  border-top: solid 1px #eee;
}
.search_content .result_item:last-child {
  /* padding-bottom: 32rpx; */
}
.search_content .result_item {
  /* border-top: solid 1px #eee; */
  font-size: 26rpx;
  /* text-overflow: ellipsis; */
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  padding: 0 24rpx;
  color: #333;
}